{
    "openapi": "3.0.0",
    "info": {
        "title": "Films API",
        "version": "0.1"
    },
    "paths": {
        "/api/signup": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Create a new user",
                "operationId": "createUser",
                "requestBody": {
                    "description": "User data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "login": {
                                        "type": "string",
                                        "example": "taytay13"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "cardigan"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "taylorswift@gmail.com"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Swift"
                                    },
                                    "first_name": {
                                        "type": "string",
                                        "example": "Taylor"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/api/signin": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authenticate user",
                "operationId": "authenticateUser",
                "requestBody": {
                    "description": "User credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "login": {
                                        "type": "string",
                                        "example": "taytay13"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "cardigan"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful authentication",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Erreur d'authentification"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/signout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Déconnexion de l'utilisateur",
                "operationId": "43ce3b3d0b0c7a68db4f95f44ddf0a2c",
                "responses": {
                    "204": {
                        "description": "Déconnexion réussie"
                    },
                    "401": {
                        "description": "Non authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Non authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        },
        "/api/critics/{filmId}": {
            "post": {
                "tags": [
                    "Critics"
                ],
                "summary": "Créer une critique pour un film",
                "operationId": "3baa3c00d1f5350fc3ade5e4ffbb1da0",
                "parameters": [
                    {
                        "name": "filmId",
                        "in": "path",
                        "description": "ID du film pour lequel la critique est créée",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Données de la critique à créer",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "score": {
                                        "description": "Score attribué à la critique",
                                        "type": "integer"
                                    },
                                    "comment": {
                                        "description": "Commentaire de la critique",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Critique créée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "ID de la critique créée",
                                            "type": "integer"
                                        },
                                        "user_id": {
                                            "description": "ID de l'utilisateur ayant créé la critique",
                                            "type": "integer"
                                        },
                                        "film_id": {
                                            "description": "ID du film concerné par la critique",
                                            "type": "integer"
                                        },
                                        "score": {
                                            "description": "Score attribué à la critique",
                                            "type": "integer"
                                        },
                                        "comment": {
                                            "description": "Commentaire de la critique",
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "description": "Date et heure de création de la critique",
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "updated_at": {
                                            "description": "Date et heure de mise à jour de la critique",
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Accès interdit",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Vous avez déjà critiqué ce film."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        },
        "/api/films": {
            "post": {
                "tags": [
                    "Films"
                ],
                "summary": "Création d'un film",
                "operationId": "e346799b1a75f20aad69fdc824a4ff0b",
                "requestBody": {
                    "description": "Film data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Nom du film"
                                    },
                                    "release_year": {
                                        "type": "integer",
                                        "format": "year",
                                        "example": 2004
                                    },
                                    "length": {
                                        "type": "integer",
                                        "example": 120
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Description du film"
                                    },
                                    "rating": {
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "language_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "special_features": {
                                        "type": "string",
                                        "example": "Caractéristiques spéciales du film"
                                    },
                                    "image": {
                                        "type": "string",
                                        "example": "Lien vers l'image du film"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Création réussie"
                    },
                    "401": {
                        "description": "Non authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Non authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "L'utilisateur n'a pas les permissions requises",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Non authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        },
        "/api/films/{id}": {
            "put": {
                "tags": [
                    "Films"
                ],
                "summary": "Mise à jour d'un film",
                "operationId": "d2fbe78b6e79c3f1cfb5067d25f9a039",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du film à mettre à jour",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Données du film à mettre à jour",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Monster Inc"
                                    },
                                    "release_year": {
                                        "type": "integer",
                                        "example": 2001
                                    },
                                    "length": {
                                        "type": "integer",
                                        "example": 121
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Yayy"
                                    },
                                    "rating": {
                                        "type": "string",
                                        "example": "G"
                                    },
                                    "language_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "special_features": {
                                        "type": "string",
                                        "example": "languages"
                                    },
                                    "image": {
                                        "type": "string",
                                        "example": "bla"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Film mis à jour avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "release_year": {
                                            "type": "integer"
                                        },
                                        "length": {
                                            "type": "integer"
                                        },
                                        "description": {
                                            "type": "string"
                                        },
                                        "rating": {
                                            "type": "string"
                                        },
                                        "language_id": {
                                            "type": "integer"
                                        },
                                        "special_features": {
                                            "type": "string"
                                        },
                                        "image": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Non authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Accès interdit",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Vous n'avez pas les autorisations nécessaires pour cette action."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Film non trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Le film n'existe pas."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        },
        "/api/users/{user_id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Afficher les détails d'un utilisateur",
                "operationId": "e10f96743f349605ddec7dd8f1a09324",
                "parameters": [
                    {
                        "name": "user_id",
                        "in": "path",
                        "description": "ID de l'utilisateur à afficher",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Détails de l'utilisateur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "login": {
                                            "description": "Login de l'utilisateur",
                                            "type": "string"
                                        },
                                        "email": {
                                            "description": "Adresse email de l'utilisateur",
                                            "type": "string",
                                            "format": "email"
                                        },
                                        "last_name": {
                                            "description": "Nom de famille de l'utilisateur",
                                            "type": "string"
                                        },
                                        "first_name": {
                                            "description": "Prénom de l'utilisateur",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "L'utilisateur n'est pas authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Accès interdit",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "L'utilisateur n'a pas les permissions pour afficher cet utilisateur"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Utilisateur non trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Utilisateur non trouvé"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur au niveau du serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Erreur au niveau du serveur"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        },
        "/api/users/{id}": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Mise à jour du mot de passe de l'utilisateur",
                "operationId": "872a537e8eb13c26c5542c7d73269a80",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de l'utilisateur dont le mot de passe doit être mis à jour",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Nouveau mot de passe de l'utilisateur",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "new_password": {
                                        "description": "Nouveau mot de passe",
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 6,
                                        "example": "fortnight"
                                    },
                                    "new_password_confirmation": {
                                        "description": "Confirmation du nouveau mot de passe",
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 6,
                                        "example": "fortnight"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mot de passe mis à jour avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Message indiquant que le mot de passe a été mis à jour",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Non authentifié"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Accès interdit",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Vous n'avez pas les autorisations nécessaires pour cette action."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Utilisateur non trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Utilisateur non trouvé."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le nouveau mot de passe et sa confirmation doivent correspondre."
                                        },
                                        "errors": {
                                            "description": "Liste des erreurs de validation détaillées",
                                            "type": "object",
                                            "example": {
                                                "new_password_confirmation": [
                                                    "Le nouveau mot de passe et sa confirmation doivent correspondre."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Token": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "Token": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}